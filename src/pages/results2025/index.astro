    items={[
      {
        title: '2025 Equine Results:',
        description: "<span class='font-bold text-blue-600'><a href='/pdfs/results2025/Dundonald_Show-2025_Results.pdf' target='_blank'> All Classes </a></span><br/>A summary of the Equine results for all classes in Rings 1-4",
        icon: 'flat-color-icons:template',
      },
      {
        title: '2025 Equine Results:',
        description: "<span class='font-bold text-blue-600'><a href='/pdfs/results2025/Dundonald_Show-2025_Results_Ring1.pdf' target='_blank'> Ring 1 - Working Hunter </a></span><br/>Results for the Working Hunter classes in Ring 1",
        icon: 'flat-color-icons:template',
      },
      {
        title: '2025 Equine Results:',
        description:
