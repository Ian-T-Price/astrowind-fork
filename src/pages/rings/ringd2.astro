---
import Layout from '~/layouts/PageLayout.astro';
import { headerDataRings } from '~/navigation-rings';

import Header from '~/components/widgets/Header.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
const metadata = {
  title: 'Dundonald Farmers Society 2025 Open Show',
  ignoreTitleTemplate: true,
};

const showBookingOption = true; // Set to true to show "Book Online", false to hide it
const showClasses = 'ringd'; // Set to basic (default), or ring name to show the appropriate classes menus

// Pass the flag to headerDataRings function
const navigationData = headerDataRings(showBookingOption, showClasses);
---

<Layout metadata={metadata}>
  <!-- sub-navigation menu for rings-->
  <Fragment slot="header">
    <Header {...navigationData} isSticky showToggleTheme />
  </Fragment>

  <!-- Features Widget *************** -->
  <Features
    id="ring"
    tagline="Ring D2"
    title="Canine: Best Of"
    subtitle="<span class='font-semibold'>All classes kindly sponsored by <a href='https://www.maggiesmuddymutts.co.uk/' target='_blank' class='text-blue-900'>Maggie`s Muddy Mutts</a></span>"
    items={[
      {
        title: 'Events',
        description: 'A combination of deft demonstrations, Any Variety of hound and the Best Of the canine world',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Courses',
        description:
          "Course generously built and judged by <a href='https://www.maggiesmuddymutts.co.uk/' target='_blank' class='text-blue-900'>Maggie`s Muddy Mutts</a>",
        icon: 'tabler:components',
      },
      {
        title: 'Prizes',
        description:
          '<span class="font-medium text-blue-700">❊</span> Best in Show open to all 1st place winners<br /><span class="font-medium text-blue-700">❊</span> Prizes: 1st £5 :: 2nd £3 :: 3rd £2<br /><span class="font-medium text-blue-700">❊</span> Places 1st to 3rd with rosettes',
        icon: 'tabler:trophy',
      },
      {
        title: 'Regulations',
        description:
          '<span class="font-medium text-blue-700">❊</span> Held under Kennel Club Rules and Regulations<br  /><span class="font-medium text-blue-700">❊</span> Note: Dogs competing do not require to be registered at the Kennel Club.<br /><span class="font-medium text-blue-700">❊</span> <span class="font-semibold">All Pitbull type dogs must be on lead and muzzled at ALL times.</span>',
        icon: 'tabler:books',
      },
    ]}
  />

  <!-- Features2 Widget: Demonstrations ************** -->
  <Features2
    id="demonstrations"
    title="Demonstrations"
    subtitle="Demonstrations start at 10:30 in Rings D1 & D2"
    tagline="Canines on show"
    items={[
      {
        title: 'Flyball Demonstration',
        description:
          '<span class="font-medium text-blue-700">❊</span> <span class="font-semibold">Start Time: 10:30</span><br />Flyball is a relay race for dogs where teams of four dogs compete against each other to complete a course as quickly as possible. Each dog must jump over a series of four hurdles, trigger a flyball box to release a ball, retrieve the ball, and then return over the hurdles to the start line. ',
        icon: 'tabler:ball-tennis',
      },
      {
        title: 'Heelwork to music demonstration by Maggie and Skittles',
        description:
          '<span class="font-medium text-blue-700">❊</span> <span class="font-semibold">Start Time: 11:00</span><br />This fun to learn fast growing canine sport is fabulous for strengthening the bond between both owner and dog, and an expression of that partnership through dog training, music and choreography.',
        icon: 'tabler:music',
      },
      {
        title: 'Flyball Demonstration',
        description:
          '<span class="font-medium text-blue-700">❊</span> <span class="font-semibold">Start Time: 11:30</span><br />Flyball is a relay race for dogs where teams of four dogs compete against each other to complete a course as quickly as possible. Each dog must jump over a series of four hurdles, trigger a flyball box to release a ball, retrieve the ball, and then return over the hurdles to the start line. ',
        icon: 'tabler:ball-tennis',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features2 Widget ************** -->
  <Features2
    id="classes"
    title="Classes"
    subtitle="Classes start at 12:30 All classes are in Ring D1<br />Entry per class: £2 on the day<br />Prizes for all classes: 1st £5 :: 2nd £3 :: 3rd £2<br /><span class='font-medium text-blue-700;'>❊</span> Best in Show open to all 1st place winners<br /><span class='font-semibold'>All classes kindly sponsored by <a href='https://www.maggiesmuddymutts.co.uk/' target='_blank' class='text-blue-900'>Maggie`s Muddy Mutts</a></span>"
    tagline="Best of Canines"
    items={[
      {
        title: 'Best Trick',
        description: 'Judge: TBC',
        icon: 'fluent:animal-dog-24-regular',
      },
      {
        title: 'Best Rescue',
        description: 'Judge: TBC',
        icon: 'fluent:animal-paw-print-24-regular',
      },
      {
        title: 'Best Veteran (over 7yrs)',
        description: 'Judge: TBC',
        icon: 'tabler:old',
      },
      {
        title: 'Best Puppy (under 12mths)',
        description: 'Judge: TBC',
        icon: 'fluent:animal-paw-print-24-regular',
      },
      {
        title: 'Best Crossbreed',
        description: 'Judge: TBC',
        icon: 'fluent:animal-dog-24-regular',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- CallToAction Widget *********** -->
  <CallToAction id="calltoaction" actions={[]}>
    <Fragment slot="title"> Entries to be booked at the ringside trailer </Fragment>
    <Fragment slot="subtitle"> on the day of the show, before the commencement of the judging. </Fragment>
  </CallToAction>
</Layout>
