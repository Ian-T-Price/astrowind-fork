---
import Layout from '~/layouts/PageLayout.astro';
import { headerDataRings } from '~/navigationRings';

import Header from '~/components/widgets/Header.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Dundonald Farmers Society 2025 Open Show',
  ignoreTitleTemplate: true,
};

const showBookingOption = true; // Set to true to show "Book Online", false to hide it
const showClasses = 'basic'; // Set to basic (default), or ring name to show the appropriate classes menus

// Pass the flag to headerDataRings function
const navigationData = headerDataRings(showBookingOption, showClasses);
